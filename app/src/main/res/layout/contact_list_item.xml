<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/contactListItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/listImageContact"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:layout_margin="10dp"
        android:contentDescription="@string/contact_picture"
        android:src="@drawable/contact"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/listTextViewContact"
        style="@style/TextStyleList"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="14dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="10dp"
        android:textSize="22sp"
        app:layout_constraintBottom_toTopOf="@+id/listTextViewNumber"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/listImageContact"
        app:layout_constraintTop_toTopOf="@+id/listImageContact"
        tools:text="@tools:sample/lorem" />

    <TextView
        android:id="@+id/listTextViewNumber"
        style="@style/TextStyleList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:layout_marginBottom="5dp"
        android:paddingEnd="10dp"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/listImageContact"
        app:layout_constraintStart_toEndOf="@+id/listImageContact"
        tools:text="@tools:sample/lorem" />
</androidx.constraintlayout.widget.ConstraintLayout>